    margin: 0;
    list-style: none;
}

.cart-preview-content ul li {
    padding: 10px 0;
    border-bottom: 1px solid #eee;
}

.cart-preview-content ul li:last-child {
    border-bottom: none;
}

.cart-preview-content ul li img {
    max-width: 100px;
    margin-right: 10px;
}

.cart-preview-content ul li span {
    font-weight: bold;
}

