<script>
    // Chờ cho tài liệu HTML hoàn thành tải trước khi thực hiện mã JavaScript
    document.addEventListener("DOMContentLoaded", function () {
        var sidebarItems = document.querySelectorAll(".sidebar ul li");

        // Lặp qua danh sách các mục và thêm sự kiện click
        for (var i = 0; i < sidebarItems.length; i++) {
            sidebarItems[i].addEventListener("click", function (event) {
                // Xóa lớp "active" từ tất cả các mục
                for (var j = 0; j < sidebarItems.length; j++) {
                    sidebarItems[j].classList.remove("active");
                }

                // Thêm lớp "active" vào mục đã chọn
                event.currentTarget.classList.add("active");
            });
        }
    });
</script>

