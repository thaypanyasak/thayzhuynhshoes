@model UserViewModel

<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <h5>@Model.UserName</h5>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input style="background-color: #00FF00; border:none" type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary" style="background-color: #00FF00; border:none">Cancel</a>
    </form>
</div>
