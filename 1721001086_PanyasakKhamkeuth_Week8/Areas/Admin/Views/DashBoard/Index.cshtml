@model DashBoardViewModel
@{
    int count = 0; // Khai báo biến count và gán giá trị ban đầu là 0
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="./DashBoard/img/fav.png" type="image/x-icon">
    <link rel="stylesheet" href="https://kit-pro.fontawesome.com/releases/v5.12.1/css/pro.min.css">
    <link rel="stylesheet" type="text/css" href="~/DashBoard/css/style.css">
    <title>Welcome To Cleopatra</title>
</head>
<style>

    header{
        display:none;
    }
    footer{
        Display : none;
    }

    .report-card {
        /* CSS tùy chỉnh cho report-card */
       width : 240px;
        margin: 10px;
    }
</style>
<body class="bg-gray-100 container">
    <h1 class="text-center" style="padding-bottom:20px; font-size:50px">ADMIN DASHBOARD</h1>
        </div>
        <!-- end sidbar -->
        <!-- strat content -->
        <div class="bg-gray-100 flex-1 p-6 md:mt-16">


            <!-- General Report -->
            <div class="grid grid-cols-4 gap-6 xl:grid-cols-1">


            <div class="container">
                <div class="row d-flex">
                <div class="report-card">
                    <div class="card">
                        <div class="card-body flex flex-col">

                            <!-- top -->
                            <div class="flex flex-row justify-between items-center">
                                <div class="h6 text-indigo-700 fad fa-shopping-cart"></div>
                                    <span class="rounded-full text-white badge bg-teal-400 text-sm font-bold p-2">
                                        @Model.TotalOrders
                                </span>
                            </div>
                            <!-- end top -->
                            <!-- bottom -->
                            <div class="mt-8">
                                <h1 class="h5 num-4"></h1>
                                <p>items sales</p>
                            </div>
                            <!-- end bottom -->

                        </div>
                    </div>
                   
                </div>
                <!-- end card -->
                <!-- card -->
                <div class="report-card">
                    <div class="card">
                        <div class="card-body flex flex-col">

                            <!-- top -->
                            <div class="flex flex-row justify-between items-center">
                                    <div class="h6 text-red-700 fad fa-sitemap"></div>
                                    <span class="rounded-full text-white badge bg-red-400 text-sm font-bold p-2">
                                    @Model.TotalProducts
                                </span>
                            </div>
                            <!-- end top -->
                            <!-- bottom -->
                            <div class="mt-8">
                                <h1 class="h5 num-4"></h1>
                                <p>Total Product</p>
                            </div>
                            <!-- end bottom -->

                        </div>
                    </div>

                </div>
                <!-- end card -->
                <!-- card -->
                    <div class="report-card">
                        <div class="card">
                            <div class="card-body flex flex-col">

                                <!-- top -->
                                <div class="flex flex-row justify-between items-center">
                                    <div class="h6 text-red-700 fad fa-users"></div>
                                    <span class="rounded-full text-white badge bg-yellow-400 text-sm font-bold p-2">
                                        @Model.TotalAccounts
                                    </span>
                                </div>
                                <!-- end top -->
                                <!-- bottom -->
                                <div class="mt-8">
                                    <h1 class="h5 num-4"></h1>
                                    <p>Total Account</p>
                                </div>
                                <!-- end bottom -->

                            </div>
                        </div>

                    </div>
                <!-- end card -->
                <!-- card -->
                <div class="report-card">
                    <div class="card">
                        <div class="card-body flex flex-col">

                            <!-- top -->
                            <div class="flex flex-row justify-between items-center">
                                    <div class="h6 text-green-700 fad fa-envelope"></div>
                                    <span class="rounded-full text-white badge bg-teal-400 text-sm font-bold p-2">
                                        @Model.TotalMessages
                                    </span>
                            </div>
                            <!-- end top -->
                            <!-- bottom -->
                            <div class="mt-8">
                                <h1 class="h5 num-4"></h1>
                                <p>Total Message</p>
                            </div>
                            <!-- end bottom -->

                        </div>
                    </div>
                </div>
                </div>
            </div>

                <!-- end card -->


            </div>
            <!-- End General Report -->
            <!-- strat Analytics -->
            <div class="mt-6 grid grid-cols-2 gap-6 xl:grid-cols-1">

               
                <!-- end update section -->
                <!-- carts -->
                <div class="flex flex-col">

                    
                    <!-- end alert -->
                    <!-- charts -->
                    <div class="grid grid-cols-2 gap-6 h-full">

                        <div class="card">
                            <div class="py-3 px-4 flex flex-row justify-between">
                                <h1 class="h6">
                                    <span class="num-4"></span>Hi
                                    <p>@User.Identity.Name</p>
                                </h1>

                                <div class="bg-teal-200 text-teal-700 border-teal-300 border w-10 h-10 rounded-full flex justify-center items-center">
                                    <i class="fad fa-eye"></i>
                                </div>
                            </div>
                            <div class="analytics_1"></div>
                        </div>

                        <div class="card">
                            <div class="py-3 px-4 flex flex-row justify-between">
                                <h1 class="h6">
                                    <span class="num-2"></span> Your account: 
                                <p>
                                    @if (User.IsInRole("Admin"))
                                    {
                                    <p><i style="padding-right:15px" class="fad fa-crown"></i>Admin</p>
                                        
                                    }
                                    else
                                    {
                                        <i class="fas fa-user"></i>
                                    }
                                </p>
                                </h1>

                                <div class="bg-indigo-200 text-indigo-700 border-indigo-300 border w-10 h-10 rounded-full flex justify-center items-center">
                                    <i class="fad fa-users-crown"></i>
                                </div>
                            </div>
                            <div class="analytics_1"></div>
                        </div>

                    </div>
                    <!-- charts    -->

                </div>
                <!-- end charts -->


            </div>
            <!-- end Analytics -->

        <div class="card col-span-2 xl:col-span-1">
            <div class="card-header">Hot Sales Last Month</div>

            <table class="table-auto w-full text-left">
                <thead>
                    <tr>
                        <th class="px-4 py-2 border-r"></th>
                        <th class="px-4 py-2 border-r">product</th>
                        <th class="px-4 py-2 border-r">price</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600">
                    @foreach (var item in ViewBag.SanPham)
                    {
                        if (count < 5)
                        {
                            <tr>
                                <td class="border border-l-0 px-4 py-2 text-center text-green-500"><i class="fad fa-circle"></i></td>
                                <td class="border border-l-0 px-4 py-2">@item.Name</td>
                                <td class="border border-l-0 px-4 py-2">@String.Format("{0:0,0}", item.Price)<span class="num-2"></span></td>
                            </tr>
                            count++;
                        }
                        else
                        {
                            break; // Dừng vòng lặp sau khi hiển thị 5 dòng
                        }
                    }
                </tbody>

            </table>
        </div>
            <!-- Sales Overview -->
            <div class="card mt-6">

                <!-- header -->
                <div class="card-header flex flex-row justify-between">
                    <h1 class="h6">Sales Overview</h1>

                    <div class="flex flex-row justify-center items-center">

                        <a href="">
                            <i class="fad fa-chevron-double-down mr-6"></i>
                        </a>

                        <a href="">
                            <i class="fad fa-ellipsis-v"></i>
                        </a>

                    </div>

                </div>
                <!-- end header -->
                <!-- body -->
                <div class="card-body grid grid-cols-2 gap-6 lg:grid-cols-1">

                    <div class="p-8">
                        <h1 class="h2">@Model.TotalOrders</h1>
                        <p class="text-black font-medium">Sales this month</p>

                        <div class="mt-20 mb-2 flex items-center">
                            <div class="py-1 px-3 rounded bg-green-200 text-green-900 mr-3">
                                <i class="fa fa-caret-up"></i>
                            </div>
                            <p class="text-black"><span class="num-2 text-green-400"></span><span class="text-green-400">% more sales</span> in comparison to last month.</p>
                        </div>

                        <div class="flex items-center">
                            <div class="py-1 px-3 rounded bg-red-200 text-red-900 mr-3">
                                <i class="fa fa-caret-down"></i>
                            </div>
                            <p class="text-black"><span class="num-2 text-red-400"></span><span class="text-red-400">% revenue per sale</span> in comparison to last month.</p>
                        </div>

                        <a href="#" class="btn-shadow mt-6">view details</a>

                    </div>

                    <div class="">
                        <div id="sealsOverview"></div>
                    </div>

                </div>
                <!-- end body -->

            </div>
            <!-- end Sales Overview -->
            <!-- start numbers -->
            
            <!-- end nmbers -->
            <!-- start quick Info -->
            <div class="grid grid-cols-3 gap-6 mt-6 xl:grid-cols-1">


                <!-- Browser Stats -->
                <div class="card">
                    <div class="card-header">Browser Stats</div>

                    <!-- brawser -->
                    <div class="p-6 flex flex-row justify-between items-center text-gray-600 border-b">
                        <div class="flex items-center">
                            <i class="fab fa-chrome mr-4"></i>
                            <h1>google chrome</h1>
                        </div>
                        <div>
                            <span class="num-2"></span>95%
                        </div>
                    </div>
                    <!-- end brawser -->
                    <!-- brawser -->
                    <div class="p-6 flex flex-row justify-between items-center text-gray-600 border-b">
                        <div class="flex items-center">
                            <i class="fab fa-firefox mr-4"></i>
                            <h1>firefox</h1>
                        </div>
                        <div>
                            <span class="num-2"></span>90%
                        </div>
                    </div>
                    <!-- end brawser -->
                    <!-- brawser -->
                    <div class="p-6 flex flex-row justify-between items-center text-gray-600 border-b">
                        <div class="flex items-center">
                            <i class="fab fa-internet-explorer mr-4"></i>
                            <h1>internet explorer</h1>
                        </div>
                        <div>
                            <span class="num-2"></span>0%
                        </div>
                    </div>
                    <!-- end brawser -->
                    <!-- brawser -->
                    <div class="p-6 flex flex-row justify-between items-center text-gray-600 border-b-0">
                        <div class="flex items-center">
                            <i class="fab fa-safari mr-4"></i>
                            <h1>safari</h1>
                        </div>
                        <div>
                            <span class="num-2"></span>90%
                        </div>
                    </div>
                    <!-- end brawser -->

                </div>
                <!-- end Browser Stats -->
                <!-- Start Recent Sales -->
                
                <!-- End Recent Sales -->


            </div>
            <!-- end quick Info -->


        </div>
        <!-- end content -->

    </div>
    <!-- end wrapper -->
    <!-- script -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="~/DashBoard/js/scripts.js"></script>
    <!-- end script -->

</body>
</html>
