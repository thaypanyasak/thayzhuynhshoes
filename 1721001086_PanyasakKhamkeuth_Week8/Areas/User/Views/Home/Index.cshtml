    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="instagram__pic">
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/sneaker15.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/sneaker16.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/sneaker17.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/sneaker18.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/sneaker19.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/sneaker20.jpg"></div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="instagram__text">
                    <h2>Instagram</h2>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                        labore et dolore magna aliqua.
                    </p>
                    <h3>#THAYHUYNH - BALLER</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Instagram Section End -->
<!-- Latest Blog Section Begin -->
<section class="latest spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Latest News</span>
                    <h2>Fashion New Trends</h2>
                </div>
            </div>
        </div>
      
            <div class="row">
            @foreach (var blog in Model.BlogList)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" data-setbg="@blog.ImageUrl"></div>
                        <div class="blog__item__text">
                            <span><img src="/img/icon/calendar.png" alt=""> @blog.CreatedDate</span>
                            <h5>@blog.Title</h5>
                            <a asp-controller="Blog" asp-action="BlogDetail" asp-route-blogId="@blog.Id">Read More</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        
    </div>
</section>
<!-- Latest Blog Section End -->
