
@{
    ViewData["Title"] = "Blog";
    ViewBag.active = 3;
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-blog" style="background-image:url(../../img/Air_Max_Day_Blog_Banner-01.jpg)">
    @* <img src="~/img/breadcrumb-bg.jpg" width="100%" height="100%" *@
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 style="color:slategray; font-weight:bold; font-size: 90px;">Our Blog</h1>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            @foreach (var blog in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" style="height:230px" data-setbg="@blog.ImageUrl"></div>
                        <div class="blog__item__text">
                            <span><img src="/img/icon/calendar.png" alt=""> @blog.CreatedDate</span>
                            <h5>@blog.Title</h5>
                            <a asp-controller="Blog" asp-action="BlogDetail" asp-route-blogId="@blog.Id">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="product__pagination">
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <a class="@(ViewBag.CurrentPage == i ? "active" : "")" href="@Url.Action("Index", new { page = i })">@i</a>
            }
        </div>
    </div>
</section>
<!-- Blog Section End -->
